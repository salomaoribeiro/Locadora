@model IEnumerable<Locadora.Models.Clientes>

<div class="row ">
  <div class="col">
    <h1> Lista de Clientes </h1>
  </div>
  <div class="col align-content-end">
    <a href="Clientes/Novo" class="btn btn-outline-primary">Adicionar Cliente</a>
  </div>

</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr class="fw-bold">
      <td>Cliente</td>
      <td>Tipo de Assinatura</td>
      <td>Ações</td>
    </tr>
  </thead>
  @if (Model.Count() > 0)
  {
    <tbody class="table-group-divider">
      @foreach (var client in Model)
      {
        <tr>
          <td> @Html.ActionLink(client.Nome, "Details", "Clientes", new { id = client.Id }) </td>
          <td>@client.Assinaturas.TipoDaAssinatura%</td>
          <td>
            <a href="Clientes/Editar/@client.Id" type="button" class="btn btn-warning">Editar</a>
            <a href="Clientes/Excluir/@client.Id" type="button" class="btn btn-danger">Excluir</a>
          </td>
        </tr>
      }
    </tbody>
  }
  else
  {
    <tfoot>
      <tr>
        <td>Não existem clientes na base.</td>
      </tr>
    </tfoot>
  }
</table>