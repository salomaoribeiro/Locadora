@model Locadora.ViewModel.ClienteNovoViewModel

<h1>Atualizar informações do cliente</h1>

@using (@Html.BeginForm("Salvar", "Clientes"))
{
  @Html.AntiForgeryToken();

  <div class="form-control">
    @Html.HiddenFor(cliente => Model.Cliente.Id)

    <div class="form-control-lg">
      <div class="mb-3">
        @Html.LabelFor(cliente => cliente.Cliente.Nome, new {@class = "form-label"})
        @Html.TextBoxFor(cliente => cliente.Cliente.Nome, new {@class = "form-control"})
        @Html.ValidationMessageFor(cliente => cliente.Cliente.Nome, "", new { @class = "text-danger" })
      </div>
    </div>

    <div class="form-control-lg">

      <div class="mb-3">
        @Html.LabelFor(cliente => cliente.Cliente.DataNascimento, new { @class = "form-label"})
        @Html.TextBoxFor(cliente => cliente.Cliente.DataNascimento, "{0: dd/MM/yyyy}", new { @class = "form-control"})
      </div>
    </div>

    <div class="form-control-lg">
      <div class="mb-3">
        @Html.LabelFor(cliente => cliente.Cliente.AssinaturasId, new { @class ="form-label"})?
        @Html.DropDownListFor(cliente => cliente.Cliente.AssinaturasId, new SelectList(Model.Assinaturas, "Id", "Nome"), 
                                "-- Selecione o tipo de assinatura --", new {@class = "form-select form-control"})
      </div>
    </div>

    <div class="form-control-lg">
      <div class="mb-3 form-check">
        @Html.CheckBoxFor(cliente => cliente.Cliente.EhSubscritoNewsLetter, new { @class = "form-check-input"})
        @Html.LabelFor(cliente => cliente.Cliente.EhSubscritoNewsLetter, new { @class ="form-check-label"})?
      </div>
    </div>

    <div class="form-control-lg">
      <div class="mb-3">
        <button type="submit" class="btn btn-primary btn-lg">Salvar usuário</button>
      </div>
    </div>

  </div>
}