@model IEnumerable<Locadora.Models.Filmes>

<div class="row">
  <div class="col">
    <h1 class="fw-bolder">Filmes</h1>
  </div>
  <div class="col align-content-end">
    <a href="Filmes/Novo" class="btn btn-outline-primary"> Adicionar Filme </a>
  </div>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr class="fw-bold">
      <td>Filme</td>
      <td>Gênero</td>
      <td>Ações</td>
    </tr>
  </thead>
  @if (Model.Count() > 0)
  {
    <tbody class="table-group-divider">
      @foreach (var movie in Model)
      {
        <tr>
          <td> @Html.ActionLink( movie.Nome, "Details", "Filmes", new { id = movie.Id }) </td>
          <td>@movie.Generos.Name</td>
          <td>
            <a href="Filmes/Editar/@movie.Id" class="btn btn-warning"> Editar </a>
            <a href="Filmes/Excluir/@movie.Id" class="btn btn-danger"> Excluir </a>
          </td>
        </tr>
      }
    </tbody>
  }
  else
  {
    <tfoot>
      <tr>
        <td>Não existem filmes na base.</td>
      </tr>
    </tfoot>
  }
</table>